<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen15dp"
        android:paddingBottom="@dimen/dimen15dp">
        <FrameLayout
            android:layout_width="27.5dp"
            android:layout_height="27.5dp"
            android:layout_marginStart="@dimen/dimen13dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            >
            <ImageView
                android:id="@+android:id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_settings_system_setting"
                android:layout_gravity="bottom"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_red_point"
                android:layout_gravity="end"
                android:visibility="gone"
                android:id="@+id/unread_msg"
                />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/settings_tile_title_font_color"
                android:ellipsize="end"
                android:textSize="@dimen/dimen16sp"
                android:text="555"/>

            <TextView
                android:id="@+android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/settings_tile_summary_font_color"
                android:textSize="@dimen/dimen12sp"
                android:text="6666"
                android:ellipsize="end"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_arrow"
            android:background="@drawable/ic_settings_arrow"
            android:layout_marginEnd="@dimen/dimen20dp"/>

        <LinearLayout android:id="@+android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D000000"/>

</LinearLayout>